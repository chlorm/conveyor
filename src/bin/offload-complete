# Continuously uploads files at intervals until it recieves a SIGINT or SIGTERM.

set -o errexit
set -o errtrace
set -o functrace
set -o nounset
set -o pipefail

PREFIX="$(readlink -f "$(readlink -f "$(dirname "$(readlink -f "$0")")")"/..)"
source "$PREFIX/share/conveyor/common.bash"

trap 'kill -9 $RclonePid 2>&-; exit' SIGINT SIGTERM

while [ true ]; do
  # The directory cleanup also removes $DOWNLOAD_COMPLETE_DIR if it is empty
  if [ ! -d "$DOWNLOAD_COMPLETE_DIR" ]; then
    echo 'no directory, sleeping 1h' >&2
    sleep 1h
    continue
  fi

  clear_empty_dirs "$DOWNLOAD_COMPLETE_DIR"

  TestEmpty="$(find "$DOWNLOAD_COMPLETE_DIR" -type f || true)"
  if [ -z "$TestEmpty" ]; then
    echo 'no files, sleeping 1h' >&2
    sleep 1h
    continue
  fi

  # FIXME: replace find with rclone somehow
  mapfile -t Downloads < <(find "$DOWNLOAD_COMPLETE_DIR" -maxdepth 1 -printf '%P\n')

  # Chunks offloads by top-level file or directory in $DOWNLOAD_COMPLETE_DIR
  for Download in "${Downloads[@]}"; do
    Files=()
    if [ -d "$DOWNLOAD_COMPLETE_DIR/$Download" ]; then
      mapfile -t Files < <(rc_ls "$DOWNLOAD_COMPLETE_DIR/$Download/")
      Download="$Download/"
    else
      Files=("$Download")
      Download=
    fi
    for File in "${Files[@]}"; do
      # Incase file was removed after starting, prevent errors
      if [ ! -e "$DOWNLOAD_COMPLETE_DIR/$Download$File" ]; then
        continue
      fi
      # Ignore errors, handled manually for rclone.
      ! rc_move "$DOWNLOAD_COMPLETE_DIR/$Download$File" \
        "$RCLONE_REMOTE/$RCLONE_REMOTE_OFFLOAD_DIR/$Download" &
      RcloneExit=$?
      RclonePid=$!
      wait $RclonePid
    done
  done

  clear_empty_dirs "$DOWNLOAD_COMPLETE_DIR"
  clear_empty_dirs "$RCLONE_REMOTE/$RCLONE_REMOTE_OFFLOAD_DIR"
  #rclone -v delete --include "*[Ss]ample.{avi,mkv,mp4}" "$RCLONE_REMOTE/$RCLONE_REMOTE_OFFLOAD_DIR"

  # FIXME: add logging or addtional error handling
  if [ $RcloneExit -gt 0 ]; then
    echo "rclone exited with $RcloneExit, sleeping 1h" >&2
    sleep 1h
  else
    echo "success, sleeping 1h" >&2
    sleep 1h
  fi
done
